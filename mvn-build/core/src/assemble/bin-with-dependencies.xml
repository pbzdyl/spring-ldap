<assembly>
	<id>bin-with-dependencies</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>dist</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
			<scope>provided</scope>
		</dependencySet>
	</dependencySets>
</assembly>
