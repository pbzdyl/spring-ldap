<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Edit form action that setups the form and processes form submissions -->
	<bean id="editGroupFormAction"
		class="org.springframework.ldap.samples.person.web.EditGroupFormAction">
		<property name="formObjectClass"
			value="org.springframework.ldap.samples.person.domain.Group" />
		<property name="validator">
			<bean
				class="org.springframework.ldap.samples.person.domain.GroupValidator" />
		</property>
		<property name="groupService" ref="groupService" />
	</bean>

</beans>