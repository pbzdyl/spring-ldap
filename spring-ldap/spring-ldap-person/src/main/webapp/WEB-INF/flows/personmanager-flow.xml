<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="displayMenu"/>

	<view-state id="displayMenu" view="menu">
		<transition on="findPerson" to="findPerson"/>
		<transition on="findGroup" to="findGroup"/>
	</view-state>

	<subflow-state id="findPerson" flow="search-flow">
		<attribute-mapper>
			<output-mapper>
				<output-attribute name="results" />
			</output-mapper>
		</attribute-mapper>
		<transition on="finish" to="displayResults"/>
		<transition on="cancel" to="displayMenu"/>
	</subflow-state>

	<view-state id="displayResults" view="searchResult">
		<transition on="newSearch" to="findPerson"/>
		<transition on="select" to="browseDetails"/>
	</view-state>

	<subflow-state id="browseDetails" flow="detail-flow">
		<attribute-mapper>
			<input-mapper>
				<mapping source="requestParameters.name" target="name"/>
				<mapping source="requestParameters.company" target="company"/>
				<mapping source="requestParameters.country" target="country"/>
			</input-mapper>
		</attribute-mapper>
		<transition on="finish" to="displayResults"/>
	</subflow-state>

	<subflow-state id="findGroup" flow="search-group-flow">
		<attribute-mapper>
			<output-mapper>
				<output-attribute name="groups" />
			</output-mapper>
		</attribute-mapper>
		<transition on="finish" to="displayGroupResults"/>
		<transition on="cancel" to="displayMenu"/>
	</subflow-state>

	<view-state id="displayGroupResults" view="searchGroupResult">
		<transition on="newSearch" to="findGroup"/>
		<transition on="select" to="browseGroupDetails"/>
	</view-state>

	<subflow-state id="browseGroupDetails" flow="detail-group-flow">
		<attribute-mapper>
			<input-mapper>
				<mapping source="requestParameters.name" target="name"/>
			</input-mapper>
		</attribute-mapper>
		<transition on="finish" to="displayGroupResults"/>
	</subflow-state>
	
</flow>